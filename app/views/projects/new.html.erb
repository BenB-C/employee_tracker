<% content_for(:navbar) do %>
  <li><a href="/">Home</a></li>
  <li><%= link_to "Projects", projects_path %></li>
<% end %>

<h1>Add a new project:</h1>

<% if @project.errors.any? %>
<h3>Please fix these errors:</h3>
<ul>
  <% @project.errors.full_messages.each do |message| %>
    <li><%= message %></li>
  <% end %>
</ul>
<% end %>

<%= form_for @project do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name %>
  <%= f.submit %>
<% end %>
