<% content_for(:navbar) do %>
  <li><a href="/">Home</a></li>
  <li><%= link_to @employee.name, employee_path(@employee) %></li>
<% end %>

<h1>Edit Employee</h1>

<% if @employee.errors.any? %>
  <h3>Please fix these errors:</h3>
  <ul>
    <% @employee.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

<%= form_for @employee do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name %>
  <%= f.submit %>
<% end %>
